@model IEnumerable<Connect2Donate.Models.TblRequest>

@{
    ViewBag.Title = "Index";
}

<h2>Donation Requests</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "Response", FormMethod.Get))
    {
        <input type="text" id="txtSearch" placeholder="Search Requests" name="search"/>
        <input type="submit" value="Search" )"/>
    }
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TblUser.Name)
        </th>
        <th></th>
    </tr>
@if (Model.Count() == 0)
{
    <tr>
        <td colspan="3">No Rows Match Search Criteria</td>
    </tr>
}
else
{
    foreach (var item in Model)
    {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TblUser.Name)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.RequestId }) |
            @Html.ActionLink("Details", "Details", new { id = item.RequestId })
           
        </td>
    </tr>
    }
}

</table>

<script>
    function Search_Text(text) {
        if (text != '' && text != null) {
            $.ajax({
                type: "get",
                data: { 'text': text },
                url: "/Response/Index_Search"

            })
        }
        else {
            $.ajax({
                type: "get",
                url: "/Response/Index"

            })
        }
    }
</script>
